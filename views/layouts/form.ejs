<h2 class="view-title"><%- 'update' === formAction ? "Update book" : "Add A book" %></h2>
<form action="<%= 'update' === formAction ? `/update/${book.id}` : '/add' %>" method="post">
  <input type="hidden" name="_method" value="<%- 'update' === formAction ? 'put' : 'post' %>">
  <input type="text" name="title" value="<%- book.title %>" placeholder="book Name">
  <textarea name="description" placeholder="Description of the book" cols="30"
    rows="10"><%- book.description %></textarea>
  <input type="text" name="author" value="<%- book.author %>" placeholder="Author">
  <input type="text" name="isbn" value="<%- book.isbn %>" placeholder="ISBN">
  <!-- <input type="text" name="image" value="<%- book.image %>" placeholder="Image"> -->
  <button type="submit"><%- 'update' === formAction ? "Update This Book" : "Add This Book" %></button>
</form>

<form method="post" action="/update/{{book.id}}?_method=DELETE">
  <input type="hidden" name="_method" value="DELETE">
</form>